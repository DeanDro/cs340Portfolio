{% extends 'main.j2' %}

{% block body %}
<h3>View Customer</h3>
    {% for info in data %}
    <form id="search" style="text-align: left;">
        <div class="row">
            <label for="customer_id_edit">Customer ID:</label>
            <input type="number" id="customer_id_edit" name="customer_id_edit" value="{{info.Customer_ID}}" readonly>
        </div>
        <br>
        <div class="row">
            <label for="customer_first_name">Customer First Name:</label>
            <input type="text" id="customer_first_name" name="customer_first_name" value="{{info.Customer_First_Name}}" readonly>
        </div>
        <br>
        <div class="row">
            <label for="customer_last_name">Customer Last Name:</label>
            <input type="text" id="customer_last_name" name="customer_last_name" value="{{info.Customer_Last_Name}}" readonly>
        </div>
        <br>
        <div class="row">
            <label for="address">Address:</label>
            <input type="text" id="address" name="address" value="{{info.Address}}" readonly>
        </div>
        <br>
        <div class="row">
            <label for="country">Country:</label>
            <input type="text" id="country" name="country" value="{{info.Country}}" readonly>
        </div>
        <br>
        <div class="row">
            <label for="zip_code">Zip Code:</label>
            <input type="number" id="zip_code" name="zip_code" value="{{info.Zip_Code}}" readonly>
        </div>
        <br>
        <div class="row">
            <label for="phone">Phone:</label>
            <input type="text" id="phone" name="phone" value="{{info.Phone}}" readonly>
        </div>
        <br>
        <div class="row">
            <label for="credit_card_id">Credit Card ID:</label>
            <input type="number" id="credit_card_id" name="credit_card_id" value="{{info.Credit_Card_ID}}" readonly>
        </div>
        <br>
        <div class="row">
            <label for="total_days">Total Days Stayed:</label>
            <input type="number" id="total_days" name="total_days" value="{{info.Total_Days_Stayed}}" readonly>
        </div>
        <br>
        <div class="row">
            <label for="total_spent">Total Spent:</label>
            <input type="number" id="total_spent" name="total_spent" value="{{info.Total_Spent}}" readonly>
        </div>
        <br>
        <div class="row">
            <label for="special_request">Special Request:</label>
            <input type="text" id="special_request" name="special_request" value="{{info.Special_Request}}" readonly>
        </div>
        <br>
        <a href="/customers"><input type="button" value="OK" id="ok" name="ok"></a>
        <a href="/customers"><input type="button" value="Cancel"></a>
    </form>
    {% endfor %}
</div>
<br>

{% endblock body %}
